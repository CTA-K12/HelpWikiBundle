{#}{% extends 'MESDPresentationPresentationBundle::index.html.twig' %}{#}
{% extends '::base.html.twig' %}

{% block sidebar %}
    {% if is_granted('ROLE_ADMIN') %}
        {{ render(controller('MESDPresentationPresentationBundle:Default:sidebar',
            { 'route': app.request.get('_route'),
              'options': { 'type': '' },
              'menu': {
                'Table of Contents': {
                    'path': path('page'),
                    'title': 'Help Wiki Table of Contents',
                    'icon': 'icon-copy'
                },
                'Comments': {
                    'path': path('comment'),
                    'title': 'Help Wiki Comments',
                    'icon': 'icon-comments-alt'
                },
                'Links': {
                    'path': path('link'),
                    'title': 'Help Wiki Links',
                    'icon': 'icon-link'
                },
                'History': {
                    'path': path('history'),
                    'title': 'Help Wiki History',
                    'icon': 'icon-time'
                },
                'Permissions': {
                    'path': path('permission'),
                    'title': 'Help Wiki Permissions',
                    'icon': 'icon-ban-circle'
                },
                'Permission Types': {
                    'path': path('permissiontype'),
                    'title': 'Help Wiki Permission Types',
                    'icon': 'icon-tags'
                },
            }
        })) }}
    {% else %}
        {{ render(controller('MESDPresentationPresentationBundle:Default:sidebar',
            { 'route': app.request.get('_route'),
              'options': { 'type': '' },
              'menu': {
                'Table of Contents': {
                    'path': path('page'),
                    'title': 'Help Wiki Table of Contents',
                    'icon': 'icon-copy'
                },
            }
        })) }}
    {% endif %}
{% endblock sidebar %}

