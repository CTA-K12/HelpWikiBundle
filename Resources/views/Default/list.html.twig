{% extends '::base.html.twig' %}
{% trans_default_domain 'mesd_help_wiki' %}

{% set pageTitle = 'Help <b>Wiki</b> Home' %}
{% set pageSubtitle = 'home' %}

{% block sidebarInner %}
    {% if is_granted('ROLE_ADMIN') %}
        {{ render(controller('MesdPresentationBundle:Default:sidebar',
            { 'route': app.request.get('_route'),
              'options': { 'type': '' },
              'menu': {
                'Pages': {
                    'text': 'pages'|trans,
                    'path': path('MesdHelpWikiBundle_page_list'),
                    'title': 'Help Wiki Pages',
                    'icon': 'fa-files-o'
                },
                'Comments': {
                    'text': 'comments'|trans,
                    'path': path('MesdHelpWikiBundle_comment_list'),
                    'title': 'Help Wiki Comments',
                    'icon': 'fa-comments-o'
                },
                'Links': {
                    'text': 'links'|trans,
                    'path': path('MesdHelpWikiBundle_link_list'),
                    'title': 'Help Wiki Links',
                    'icon': 'fa-link'
                },
                'History': {
                    'text': 'history'|trans,
                    'path': path('MesdHelpWikiBundle_history_list'),
                    'title': 'Help Wiki History',
                    'icon': 'fa-clock-o'
                },
                'Permissions': {
                    'text': 'permissions'|trans,
                    'path': path('MesdHelpWikiBundle_permission_list'),
                    'title': 'Help Wiki Permissions',
                    'icon': 'fa-ban'
                },
                'Page Permissions': {
                    'text': 'page.permissions'|trans,
                    'path': path('MesdHelpWikiBundle_page_permission_list'),
                    'title': 'Help Wiki Page Permissions',
                    'icon': 'fa-tags'
                },
            }
        })) }}
    {% else %}
        {{ render(controller('MesdPresentationBundle:Default:sidebar',
            { 'route': app.request.get('_route'),
              'options': { 'type': '' },
              'menu': {
                'Table of Contents': {
                    'text': 't.o.c'|trans,
                    'path': path('MesdHelpWikiBundle_page_list'),
                    'title': 'Help Wiki Table of Contents',
                    'icon': 'fa-files-o'
                },
            }
        })) }}
    {% endif %}
{% endblock sidebarInner %}

{% block contentBody %}
This is the help wiki main page
{% endblock contentBody %}
