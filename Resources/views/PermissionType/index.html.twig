{% extends 'MesdHelpWikiBundle:Default:index.html.twig' %}
{% set subtitle = 'Permission Types List' %}

{% block contentBody %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Actions</th>
                <th>Short Name</th>
                <th>Long Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td data-role-th="Actions">
                    <div class="btn-group">
                        <a class="btn btn-default btn-xs" href="{{ path('permissiontype_show', { 'id': entity.id }) }}" title="view"><span class="fa fa-search"></span></a>
                        <a class="btn btn-default btn-xs" href="{{ path('permissiontype_edit', { 'id': entity.id }) }}" title="edit"><span class="fa fa-pencil"></span></a>
                    </div>
                </td>
                <td data-role-th="Short Name">{{ entity.shortName }}</td>
                <td data-role-th="Long Name">{{ entity.longName }}</td>
                <td data-role-th="Description" title="{{ entity.description|slice(0,60) }}">
                    {% if 30 < entity.description|length %}
                        {{ entity.description|slice(0, 30) }}...
                    {% else %}
                        {{ entity.description }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5"><em class="text-muted">No Data Found</em></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-2 col-md-offset-10">
            <a href="{{ path('permissiontype_new') }}" class="btn btn-default form-control">
                <span class="fa fa-plus"></span>
                New
            </a>
        </div>
    </div>
{% endblock contentBody %}
