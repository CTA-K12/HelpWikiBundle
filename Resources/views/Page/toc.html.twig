{% extends '::index.html.twig' %}
{% set pageTitle = 'help.wiki'|trans %}
{% set pageSubtitle = 'table.of.contents'|trans %}

{% block contentBody %}
    {{ _self.tree(entities) }}
{% endblock contentBody %}

{% block toolbarTopRight %}
    {% if is_granted('EDIT', entity) %}
        <div class="btn-group pull-right">
            <a href="{{ path('MesdHelpWikiBundle_page_edit_order') }}" class="btn btn-xs btn-default">
                <span class="fa fa-align-justify"></span>
                Order Pages
            </a>
        </div>
    {% endif %}
{% endblock toolbarTopRight %}

{% block contentFooter %}
    {% if is_granted('CREATE', entity) %}
        <div class="row">
            <div class="col-sm-1-6">
                <a href="{{ path('MesdHelpWikiBundle_page_new') }}" class="btn btn-default form-control">
                    <span class="fa fa-plus"></span>&nbsp; {{ 'new'|trans }}
                </a>
            </div>
        </div>
    {% endif %}
{% endblock contentFooter %}

{% block toolbarBottom %}
    <div id="toolbar-bottom" class="toolbar section section-white">
        <div class="row hidden-xs">
            <div class="col-sm-1-4">
                <a href="#" class="btn btn-xs btn-block btn-default" disabled><span class="fa fa-arrow-circle-left"></span> Prev</a>
            </div>
            <div class="col-sm-offset-1-2 col-sm-1-4">
                {% if entity is empty %}
                    <button type+'button' title="Next Page" class="btn btn-xs btn-block btn-default" disabled>Next <span class="fa fa-arrow-circle-right"></span></button>
                {% else %}
                    <a href="{{ path('MesdHelpWikiBundle_page_show', { 'slug': entity.slug }) }}" title="Next Page: {{ entity.title }}" class="btn btn-xs btn-block btn-default">Next <span class="fa fa-arrow-circle-right"></span></a>
                {% endif %}
            </div>
        </div>
        <div class="btn-group btn-group-justified visible-xs">
            <a href="#" class="btn btn-xs btn-block btn-default" title="Previous" disabled><span class="fa fa-arrow-circle-left"></span></a>
            {% if entities is empty %}
                <button type+'button' title="Next Page" class="btn btn-xs btn-block btn-default" disabled>Next <span class="fa fa-arrow-circle-right"></span></button>
            {% else %}
                <a href="{{ path('MesdHelpWikiBundle_page_show', { 'slug': entities[0].slug }) }}" title="Next Page: {{ entities[0].title }}" class="btn btn-xs btn-block btn-default">Next <span class="fa fa-arrow-circle-right"></span></a>
            {% endif %}
        </div>
    </div>
{% endblock toolbarBottom %}

{% block sidebarInner %}
<nav>
    <ul class="nav">
        <li class="active">
            <a href="{{ path('MesdHelpWikiBundle_toc') }}" title="{{ 'table.of.contents'|trans }}">
                <span class="sidebar-item-icon fa fa-files-o"></span>
                <span class="sidebar-item-label">{{ 't.o.c'|trans }}</span>
            </a>
        </li>
        {% if is_granted('MANAGE', menu) %}
            <li>
                <a href="{{ path('MesdHelpWikiBundle_tag_index') }}" title="{{ 'manage.tags'|trans }}">
                    <span class="sidebar-item-icon fa fa-tags"></span>
                    <span class="sidebar-item-label">{{ 'tags'|trans }}</span>
                </a>
             </li>
            <li>
                <a href="{{ path('MesdHelpWikiBundle_comment_index') }}" title="{{ 'moderate.comments'|trans }}">
                    <span class="sidebar-item-icon fa fa-comments-o"></span>
                    <span class="sidebar-item-label">{{ 'comments'|trans }}</span>
                </a>
            </li>
            <li>
                <a href="{{ path('MesdHelpWikiBundle_link_index') }}" title="{{ 'manage.links'|trans }}">
                    <span class="sidebar-item-icon fa fa-link"></span>
                    <span class="sidebar-item-label">{{ 'links'|trans }}</span>
                </a>
            </li>
            <li>
                <a href="{{ path('MesdHelpWikiBundle_history_index') }}" title="{{ 'view.restore.history'|trans }}">
                    <span class="sidebar-item-icon fa fa-clock-o"></span>
                    <span class="sidebar-item-label">{{ 'history'|trans }}</span>
                </a>
            </li>
            <li>
                <a href="{{ path('MesdHelpWikiBundle_permission_index') }}" title="{{ 'permissions'|trans }}">
                    <span class="sidebar-item-icon fa fa-ban"></span>
                    <span class="sidebar-item-label">{{ 'permissions'|trans }}</span>
                </a>
            </li>
            <li>
                <a href="{{ path('MesdHelpWikiBundle_pagepermission_index') }}" title="{{ 'page.permissions'|trans }}">
                    <span class="sidebar-item-icon fa fa-lock"></span>
                    <span class="sidebar-item-label">{{ 'page.permissions'|trans }}</span>
                </a>
            </li>
        {% endif %}
        <div id="sidebar-toggle" class="sidebar-item-toggle" title="toggle.sidebar" style="">
            <span class="fa fa-chevron-circle-left"></span>
        </div>
    </ul>
</nav>
{% endblock sidebarInner %}

{% macro tree(twigs) %}
<ul class="list-chaptered">
    {% for twig in twigs %}
        <li>
            <a href="{{ path('MesdHelpWikiBundle_page_show', { 'slug': twig.slug }) }}" title="{{ twig.title }}">{{ twig.title }}</a>
            {% if twig.children|length > 0 %}{{ _self.tree(twig.children) }}{% endif %}
        </li>
    {% endfor %}
</ul>
{% endmacro %}