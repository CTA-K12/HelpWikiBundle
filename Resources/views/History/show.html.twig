{% extends 'MESDHelpWikiBundle:Default:index.html.twig' %}

{% block main %}
    <h1>History</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ entity.body }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Revision</th>
                <td>{{ entity.revision }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{{ entity.dateTime|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('history') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('history_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock main %}
