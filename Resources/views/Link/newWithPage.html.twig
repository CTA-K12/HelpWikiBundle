{% extends 'MesdHelpWikiBundle:Default:index.html.twig' %}
{% set subtitle = 'New Link' %}

{% block main %}


        <div class="row-fluid">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Link Route with Existing Page</h3>
                    </div>
                    <div class="panel-body">
                        {{ form_start(new_link_form) }}
                            {{ form_errors(new_link_form) }}
                                <div class="row-fluid">
                                    <div class="form-group col-md-12">
                                        {{ form_label(new_link_form.routeAlias, 'Route') }}
                                        {{ form_errors(new_link_form.routeAlias) }}
                                        {{ form_widget(new_link_form.routeAlias, { 'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Slug',
                                            'tabindex': 1,
                                        } }) }}
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="form-group col-md-12">
                                        {{ form_label(new_link_form.page, 'Page') }}
                                        {{ form_errors(new_link_form.page) }}
                                        {{ form_widget(new_link_form.page, {
                                            'empty_value' : 'Choose a page',
                                            'attr': {
                                                'class': 'form-control',
                                                'placeholder': 'Page Title',
                                                'tabindex': 2,
                                            }
                                        }) }}
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="form-group col-md-12">
                                        {{ form_widget(new_link_form.submit, { 'attr': {
                                            'class': 'form-control btn btn-default',
                                            'tabindex': 3,
                                        } }) }}
                                    </div>
                                </div>
                            {{ form_rest(new_link_form) }}
                        {{ form_end(new_link_form) }}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Link Route with New Page</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row-fluid">
                            <div class="form-group col-md-12">
                                {{ form(new_page_form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <a href="{{ path('link') }}">
            Back to the list
        </a>
{% endblock main %}