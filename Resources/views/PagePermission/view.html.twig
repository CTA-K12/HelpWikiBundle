{% extends '::index.html.twig' %}
{% trans_default_domain 'mesd_help_wiki' %}

{% block main %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Cascade</th>
                <td>{{ entity.cascade }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('pagepermission') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('pagepermission_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock main %}
