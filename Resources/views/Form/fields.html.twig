{%- block mesd_help_wiki_selectize_text_widget -%}
    {%- set attr = attr|merge({'class': 'selectize'}) -%}
    {%- set type = type|default('text') -%}
    <input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{%- endblock mesd_help_wiki_selectize_text_widget -%}

{% block upload_widget %}
{% spaceless %}
