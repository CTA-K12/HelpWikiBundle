{% block mesd_help_wiki_ckeditor_widget %}
{% spaceless %}
    {% set attr = attr|merge({'class': 'ckeditor'}) %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
{% endspaceless %}
    <script type="text/javascript" src="{{ asset('bundles/mesdhelpwiki/vendor/ckeditor/ckeditor.js') }}"></script>
    <script type="text/javascript">{% include('MesdHelpWikiBundle:Form:config.js.twig') %}</script>
    <script type="text/javascript">{% include('MesdHelpWikiBundle:Form:styles.js.twig') %}</script>
{% endblock mesd_help_wiki_ckeditor_widget %}

