{% block button_widget %}
{% spaceless %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <button type="{{ type|default('button') }}" {{ block('button_attributes') }}>{% if icon is defined %}<span class="{{ icon }}"></span>{% endif %} {{ label|trans({}, translation_domain) }}</button>
{% endspaceless %}
{% endblock button_widget %}

{% block submit_widget %}
{% spaceless %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <button type="{{ type|default('submit') }}" {{ block('button_attributes') }}>{% if icon is defined %}<span class="{{ icon }}"></span>{% endif %} {{ label|trans({}, translation_domain) }}</button>
{% endspaceless %}
{% endblock submit_widget %}

{% block ckeditor_widget %}
        <script type="text/javascript" src="{{ asset('bundles/mesdhelpwiki/js/ckeditor/ckeditor.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/mesdhelpwiki/js/ckeditor/config.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/mesdhelpwiki/js/ckeditor/styles.js') }}"></script>
{% spaceless %}
    {% set attr = attr|merge({'class': 'ckeditor'}) %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
{% endspaceless %}
{% endblock ckeditor_widget %}

{% block upload_widget %}
{% spaceless %}
    <div class="btn btn-default btn-file">
        Browse <input {{ block('widget_attributes') }} />
    </div>
{% endspaceless %}
{% endblock upload_widget %}