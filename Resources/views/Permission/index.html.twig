{% extends 'MesdHelpWikiBundle:Default:index.html.twig' %}

{% block contentBody %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Actions</th>
                <th>Permission</th>
                <th>Page</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td data-role-th="Actions">
                    <div class="btn-group">
                        <a class="btn btn-default btn-xs" href="{{ path('permission_show', { 'id': entity.id }) }}" title="view"><span class="fa fa-search"></span></a>
                        <a class="btn btn-default btn-xs" href="{{ path('permission_edit', { 'id': entity.id }) }}" title="edit"><span class="fa fa-pencil"></span></a>
                    </div>
                </td>
                <td data-role-th="Permission">{{ entity.permissionType }}</td>
                <td data-role-th="Page">{{ entity.page }}</td>
                <td data-role-th="Role">{{ entity.role }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-1-6 col-md-offset-5-6">
            <a href="{{ path('permission_new') }}" class="btn btn-default form-control">
                <span class="fa fa-plus"></span>
                New
            </a>
        </div>
    </div>

{% endblock contentBody %}
