{% extends '::index.html.twig' %}

{% set pageTitle = '<span class="fa fa-pencil"></span> ' ~ 'page permissions'|trans %}
{% set pageSubtitle = 'edit'|trans %}

{% block contentBody %}

    <section>
        <form>
            <table>
                <thead>
                    <tr>
                        <th>&nbsp;</th>
                        <th>Create</th>
                        <th>View</th>
                        <th>Edit</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>Page</th>
                        <td><input type="checkbox" id="create-page" name="page" /></td>
                        <td><input type="checkbox" id="view-page" name="page" /></td>
                        <td><input type="checkbox" id="edit-page" name="page" /></td>
                        <td><input type="checkbox" id="remove-page" name="page" /></td>
                    </tr>
                    <tr>
                        <th>Comment</th>
                        <td><input type="checkbox" id="create-comment" name="comment" /></td>
                        <td><input type="checkbox" id="view-comment" name="comment" /></td>
                        <td><input type="checkbox" id="edit-comment" name="comment" /></td>
                        <td><input type="checkbox" id="remove-comment" name="comment" /></td>
                    </tr>
                    <tr>
                        <th>Link</th>
                        <td><input type="checkbox" id="create-link" name="link" /></td>
                        <td><input type="checkbox" id="view-link" name="link" /></td>
                        <td><input type="checkbox" id="edit-link" name="link" /></td>
                        <td><input type="checkbox" id="remove-link" name="link" /></td>
                    </tr>
                </tbody>
            </table>
        </form>
    </section>

{% endblock contentBody %}

{% block toolbarTopRightContent %}
    <div class="btn-group pull-right">
        <a href="#" class="btn btn-xs btn-default">
            <span class="fa fa-search"></span>
            Detail
        </a>
        <a href="{{ path('history_page', { 'id': entity.id }) }}" class="btn btn-xs btn-default">
            <span class="fa fa-clock-o"></span>
            History
        </a>
        <a href="{{ path('page_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-default">
            <span class="fa fa-pencil"></span>
            Edit
        </a>
    </div>
{% endblock toolbarTopRightContent %}

{% block sidebarInner %}
<nav>
    <ul class="nav">
        <li>
            <a href="{{ path('MesdHelpWikiBundle_toc') }}" title="{{ 'table.of.contents'|trans }}">
                <span class="sidebar-item-icon fa fa-files-o"></span>
                <span class="sidebar-item-label">{{ 't.o.c'|trans }}</span>
            </a>
        </li>
        {% if is_granted('MANAGE', menu) %}
            <li>
                <a href="{{ path('MesdHelpWikiBundle_tag_index') }}" title="{{ 'manage.tags'|trans }}">
                    <span class="sidebar-item-icon fa fa-tags"></span>
                    <span class="sidebar-item-label">{{ 'tags'|trans }}</span>
                </a>
             </li>
            <li>
                <a href="{{ path('MesdHelpWikiBundle_comment_index') }}" title="{{ 'moderate.comments'|trans }}">
                    <span class="sidebar-item-icon fa fa-comments-o"></span>
                    <span class="sidebar-item-label">{{ 'comments'|trans }}</span>
                </a>
            </li>
            <li>
                <a href="{{ path('MesdHelpWikiBundle_link_index') }}" title="{{ 'manage.links'|trans }}">
                    <span class="sidebar-item-icon fa fa-link"></span>
                    <span class="sidebar-item-label">{{ 'links'|trans }}</span>
                </a>
            </li>
            <li>
                <a href="{{ path('MesdHelpWikiBundle_history_index') }}" title="{{ 'view.restore.history'|trans }}">
                    <span class="sidebar-item-icon fa fa-clock-o"></span>
                    <span class="sidebar-item-label">{{ 'history'|trans }}</span>
                </a>
            </li>
            <li class="active">
                <a href="{{ path('MesdHelpWikiBundle_permission_index') }}" title="{{ 'permissions'|trans }}">
                    <span class="sidebar-item-icon fa fa-ban"></span>
                    <span class="sidebar-item-label">{{ 'permissions'|trans }}</span>
                </a>
            </li>
            <li>
                <a href="{{ path('MesdHelpWikiBundle_pagepermission_index') }}" title="{{ 'page.permissions'|trans }}">
                    <span class="sidebar-item-icon fa fa-lock"></span>
                    <span class="sidebar-item-label">{{ 'page.permissions'|trans }}</span>
                </a>
            </li>
        {% endif %}
        <div id="sidebar-toggle" class="sidebar-item-toggle" title="toggle.sidebar" style="">
            <span class="fa fa-chevron-circle-left"></span>
        </div>
    </ul>
</nav>
{% endblock sidebarInner %}
