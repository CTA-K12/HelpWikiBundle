{% extends 'MesdHelpWikiBundle:Default:index.html.twig' %}

{% set subtitle = 'Edit Permission' %}

{% block main %}

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    <div class="row">
        <div class="form-group col-md-2-12">
            <label for="permissionId">ID</label>
            <div class="form-control">
                <em class="text-muted">{{ entity.id }}</em>
            </div>
        </div>
        <div class="form-group col-md-10-12">
            {{ form_label(edit_form.page, 'Page Title') }}
            {{ form_errors(edit_form.page) }}
            {{ form_widget(edit_form.page, {
                'empty_value' : 'Choose a page',
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Page Title',
                    'tabindex': 1,
                }
            }) }}
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6-12">
            {{ form_label(edit_form.role, 'Role') }}
            {{ form_errors(edit_form.role) }}
            {{ form_widget(edit_form.role, {
                'empty_value' : 'Choose a role',
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Role Name',
                    'tabindex': 2,
                }
            }) }}
        </div>
        <div class="form-group col-md-6-12">
            {{ form_label(edit_form.permissionType, 'Permission Type') }}
            {{ form_errors(edit_form.permissionType) }}
            {{ form_widget(edit_form.permissionType, {
                'empty_value' : 'Choose a permission type',
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Permission Type Name',
                    'tabindex': 3,
                }
            }) }}
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-2-12 col-md-offset-10-12">
            {{ form_widget(edit_form.submit, { 'attr': {
                'class': 'form-control btn btn-default',
                'tabindex': 4,
            } }) }}
        </div>
    </div>
    {{ form_end(edit_form) }}

    <ul class="record_actions">
        <li>
            <a href="{{ path('permission') }}">
                Back to the list
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>

{% endblock main %}
