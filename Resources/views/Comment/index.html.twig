{% extends 'MesdHelpWikiBundle:Default:index.html.twig' %}

{% block main %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Actions</th>
                <th>User</th>
                <th>Page</th>
                <th>Date/Time</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td data-role-th="Actions">
                    <div class="btn-group">
                        <a class="btn btn-default btn-xs" href="{{ path('comment_show', { 'id': entity.id }) }}" title="view"><span class="fa fa-search"></span></a>
                        <a class="btn btn-default btn-xs" href="{{ path('comment_edit', { 'id': entity.id }) }}" title="edit"><span class="fa fa-pencil"></span></a>
                    </div>
                </td>
                <td data-role-th="User">{{ entity.user }}</td>
                <td data-role-th="Page">{{ entity.page }}</td>
                <td data-role-th="Date/Time">{% if entity.dateTime %}{{ entity.dateTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-2 col-md-offset-10">
            <a href="{{ path('comment_new') }}" class="btn btn-default form-control">
                <span class="fa fa-plus"></span>
                New
            </a>
        </div>
    </div>

{% endblock main %}
